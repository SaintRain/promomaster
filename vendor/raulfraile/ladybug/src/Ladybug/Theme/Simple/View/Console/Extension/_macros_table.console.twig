

{% macro render_row_separator(var, indent) %}
{% import "_macros.console.twig" as m %}
{% if indent %}{{ m.indent(var.level) }}{% endif %}
+
{% for i in 1..var.columnsNumber %}
{{ '-'|repeat(var.maxWidthByColumn(i-1) + 2) }}+
{% endfor %}
{% endmacro %}

{% macro render_header(var) %}
{% import "_macros.console.twig" as m %}
{{ m.indent(var.level) }}
|
{% for item in var.headers %}
<space>{{ item|pad(var.maxWidthByColumn(loop.index0))|tags|raw }}<space>|
{% endfor %}
{% endmacro %}

{% macro render_row(row, var) %}
{% import "_macros.console.twig" as m %}
{{ m.indent(var.level) }}
|<space>
    {% for field in row %}
    {{ field|pad(var.maxWidthByColumn(loop.index0))|tags|raw }}<space>|<space>
        {% endfor %}
{% endmacro %}
