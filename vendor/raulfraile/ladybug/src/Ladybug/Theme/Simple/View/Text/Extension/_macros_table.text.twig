

{% macro render_row_separator(var) %}
    {% import "_macros.text.twig" as m %}
    {{ m.indent(var.level) }}
    +
    {% for i in 1..var.columnsNumber %}
    {{ '-'|repeat(var.maxWidthByColumn(i-1) + 2) }}+
    {% endfor %}
{% endmacro %}

{% macro render_header(var) %}
    {% import "_macros.text.twig" as m %}
    {{ m.indent(var.level) }}
    |
    {% for item in var.headers %}
        <space>{{ item|pad(var.maxWidthByColumn(loop.index0))|tags }}<space>|
    {% endfor %}
{% endmacro %}

{% macro render_row(row, var) %}
    {% import "_macros.text.twig" as m %}
    {{ m.indent(var.level) }}
    |<space>
    {% for field in row %}
        {{ field|pad(var.maxWidthByColumn(loop.index0))|tags }}<space>|<space>
    {% endfor %}
{% endmacro %}
