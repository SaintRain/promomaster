{% block star_rating_widget %}
    {% spaceless %}

        {% for child in form %}

            {% if child.vars.value is defined and child.vars.value %}

                <input type="radio" {{ block('widget_attributes') }}{% if child.vars.value is defined %} value="{{ child.vars.value }}" title="{{ child.vars.value }}"{% endif %} {% if child.vars.checked %}checked="checked"{% endif %}/>

            {% endif %}

        {% endfor %}

    {% endspaceless %}
{% endblock %}