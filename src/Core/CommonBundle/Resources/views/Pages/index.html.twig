        </section>
        <!-- brands showcase -->
        {% if brands | length %}
        <section class="brands showcase_box">
                <h2>
                    <a href="javascript:void(0);">Бренды</a>
                </h2>
                {#
                <a href="javascript:void(0);" class="showcase_seeall">Посмотреть все бренды</a>
                #}
                <div class="showcase_container">
                    <ul class="showcase_list slider multiple-items">
                        {% for brand in brands %}
                            <li class="showcase_item">
                                <a href="{{path('core_shop_product_brand_first_page', {'slug' : brand.slug})}}">
                                    {% if brand.logo %}
                                        {% if attribute(brand.logo | first, 'alt' ~ app.request.locale) %}
                                            {% set imgAlt =  attribute(brand.logo | first, 'alt' ~ app.request.locale) %}
                                            {% else %}
                                                {% set imgAlt =  attribute(brand, 'caption' ~ app.request.locale) %}
                                        {% endif %}

                                        <img alt="{{imgAlt}}" title="{{imgAlt}}" src="{{asset((brand.logo | first) | getFileWebPath('preview', '148x70_')) }}">
                                    {% else %}
                                        <img title="{{ 'msg.image_not_found' | trans([],'frontend') }}" alt="{{ 'msg.image_not_found' | trans([],'frontend') }}" src="{{asset('images/image_not_found/64x64.jpg')}}">
