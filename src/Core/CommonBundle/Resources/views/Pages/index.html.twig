<div role="main" id="content">
    <div class="main_col">
        <div class="main_col_pad">
        <!-- products showcase -->
        <section class="products_showcase products_grid">
            <div class="clear">
                <ul class="text_tabs">
                    {% for centCat in centerCategories %}
                        <li class="text_tab in_cat_{{centCat.name}}{% if loop.first %} text_tab_active{% endif %}">
                            <span>{{attribute(centCat, 'caption' ~ app.request.locale)}}</span>
                        </li>
                    {% endfor %}
                </ul>
                {#<a href="javascript:void(0);" class="seeall">Посмотреть все популярные товары</a>#}
            </div>
            <div class="clear">
                {% for centCat in centerCategories %}
                    {% set i = 0 %}
                    {% set isFirst = (loop.first) ? true : false %}
                    {% set productLen = centCat.products | length %}
                    {% set products = (productLen > 8) ? (centCat.products | slice(0, 7)) : centCat.products %}
                    {% for product in products %}
                        {% if i % 4 == 0 or productLen == 0 %}
                            <div class="products_grid_line grid_container in_cat_{{centCat.name}}{% if not isFirst %} hidden{% endif %}">
                        {% endif %}

                                {{ block('product') }}

                               {# <div class="product grid_item">
