
{% if paymentSytems|length %}
    {% set noIndex =  (request and request.attributes.get('_route') == 'core_common_index') ? false : true %}
    <ul class="footer_payments">

        {% for ps in paymentSytems %}

            {% if ps.system != 'Robokassa' and ps.isEnabled %}

                <li class="payment_{{ ps.system }} payment_icon" title="{{ attribute(ps, 'caption' ~ app.request.locale) }}">{{ attribute(ps, 'caption' ~ app.request.locale) }}</li>

            {% endif %}

        {% endfor %}

        {% if article %}
            {% if noIndex %}<!--noindex-->{% endif %}
            <li class="all">
                <a {% if noIndex %}rel="nofollow" {% endif %}href="{{path('core_faq_article', {'articleSlug': article.slug, 'categorySlug': article.category.slug })}}">Все способы оплаты</a>
            </li>
            {% if noIndex %}<!--/noindex-->{% endif %}
        {% endif %}

    </ul>

    <div class="clear"></div>

{% endif %}