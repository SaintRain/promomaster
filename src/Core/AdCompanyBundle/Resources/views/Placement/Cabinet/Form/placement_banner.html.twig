                    {{ banner.image[0].height }}x{{ banner.image[0].width }}
                {% endif %}
            {% else %}
                {% if banner.file[0].width is defined %}
                    {% if banner.file[0].width is defined %}
                        {{ banner.file[0].height }}x{{ banner.file[0].width }}
                    {% endif %}
                {% endif %}
            {% endif %}
        </div >
    </td >



    <td  class="col-sm-3  {% if form_errors(form.banner) %}state-error{% endif %}">
        {{ form_widget(form.preoritet,{ 'attr': {'class': 'form-control'} }) }}
