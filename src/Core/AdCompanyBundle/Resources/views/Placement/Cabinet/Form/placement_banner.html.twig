    <td class="col-sm-3  {% if form_errors(form.banner) %}state-error{% endif %}">
        {#<label>{{ form.banner.vars.label }}</label>#}
        {{ form_widget(form.banner,{ 'attr': {'class': ''} }) }}
        {{ form_errors(form.banner) }}
    </td >

    {% if form.vars.value.banner is defined %}

