{% extends 'CorePropertyBundle:Filter/EditType:radio.html.twig' %}

{% block radio %}

    {% set formElementClass = 'hidden' %}

    {% if this.values %}

        <div class="filter_gender filter_group edit-type-radio">

            {% for id, value in this.values %}

                <span class="filter_gender_tgl filter_gender_tgl_{{ value.name|replace(' ', '_') }} filter-fake-radio">{{ value.caption }}</span>

                {{ block('formElement') }}

            {% endfor %}

        </div>

    {% endif %}

{% endblock %}