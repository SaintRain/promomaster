{% block sub_content %}

        <div class="tab-v2">
            <ul class="nav nav-tabs">
                <li  {%  if app.request.attributes.get('_route') == 'core_cabinet_adplace_edit' %}  class="active" {% endif %}>
                    <a href="{% if adplace.id %}{{ path('core_cabinet_adplace_edit', {id:adplace.id}) }}{% else %}{{ path('core_cabinet_adplace_list_first_page') }}{% endif %}" >Рекламное место</a></li>
