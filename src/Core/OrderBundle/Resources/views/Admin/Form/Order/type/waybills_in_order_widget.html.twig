{% block collection_widget_row %}
    {% spaceless %}
        {% include 'CoreOrderBundle:Admin/Form/Blocks:collection_widget.html.twig' with {'form': child} %}
    {% endspaceless %}
{% endblock %}

{% block  waybills_in_order_widget %}
    {% for child in form.children %}
        {% form_theme child _self %}
        {% if child.vars.prototype is defined %}
        {{ form_label(child) }}
        <div class="controls sonata-ba-field sonata-ba-field-standard-natural  ">
            <ul class="collection-modify control-group" id="{{child.vars.id}}" data-prototype="{% filter escape %}{% include 'CoreOrderBundle:Admin/Form/Blocks:collection_widget.html.twig' with {'form': child.vars.prototype, 'allow_delete': child.vars.allow_delete, 'id':loop.index} %}{% endfilter %}">
                {% for nested in child %}
                    {% include 'CoreOrderBundle:Admin/Form/Blocks:collection_widget.html.twig' with {'form': nested, 'allow_delete': child.vars.allow_delete, 'first':loop.first, 'allow_add': child.vars.allow_add, 'id':loop.index} %}
                    {% do nested.setRendered() %}
                    {% else %}
                        <li class="first-add"><a class="btn collection-modify-add" href="javascript:void(0);">Добавить упаковку</a></li>
                {% endfor %}
            </ul>
            {% if child | length %}
                <div class="control-group">
                    {% if (waybill.isAutoGenerated == 1) and (waybill.number | length) %}
                        <a target="_blank" href="{{path('admin_core_delivery_service_printWaybill', {'id':object.id, 'sellerId':waybill.salesMan.id, 'deliveryMethodId': waybill.deliveryMode.id, 'waybillId': waybill.number})}}" class="btn print-waybill btn-info">Распечатать накладную</a>
                        {% else %}
                            <a href="javascript:void(0);" class="btn generate-waybill">Сгенерировать накладную</a>
                    {% endif %}
                </div>
                <div class="modal waybill-modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel">Генерация накладной</h3>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <a href="javascript:void(0);" class="btn" data-dismiss="modal" aria-hidden="true">Оменить генерацию</a>
                        <a href="javascript:void(0);" class="btn btn-primary waybill-submit-form">Сгенирировать</a>
                    </div>
                </div>
            {% endif %}
        </div>
        {% else %}
            {{form_row(child) }}
        {% endif %}
    {% endfor %}
{% endblock %}