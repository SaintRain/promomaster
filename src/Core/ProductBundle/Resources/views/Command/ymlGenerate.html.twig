{%spaceless%}<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE yml_catalog SYSTEM "shops.dtd">
<yml_catalog date="{{ "now"|date("Y-m-d H:i", default_timezone) }}">
    <shop>
        <name>Olikids.ru</name>
        <company>ООО "Olikids"</company>
        <url>http://www.{{ domain_ru }}/</url>
        <currencies>
            <currency id="RUB" rate="1"/>
        </currencies>
        <categories>
            {%for cat in categories%}
                {% if cat.id not in root_cat_ids %}
                    <category id="{{cat.id}}" {%if cat.parent and cat.parent.id not in root_cat_ids %}parentId="{{cat.parent.id}}"{%endif%}>{{cat.captionRu}}</category>
                    {%endif%}
                {%endfor%}
        </categories>
        <local_delivery_cost>300</local_delivery_cost>
        <offers>
            {{offers|raw}}
        </offers>
    </shop>
</yml_catalog>
{%endspaceless%}