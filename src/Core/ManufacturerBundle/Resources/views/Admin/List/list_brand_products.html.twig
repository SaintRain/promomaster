{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}

    {% spaceless %}

        {%
        set filter = {
            'filter[brand][value][]': object.id,
            'filter[_page]': 1,
            'filter[_sort_by]': 'indexPosition',
            'filter[_sort_order]': 'ASC',
            'filter[_per_page]': 25,
        }
        %}
        {% if object.countProducts %}
            <a href="{{ path('admin_core_product_commonproduct_list', filter) }}" title="Перейти к продукции бренда"><span class="icon-search"></span>&nbsp;{{ object.countProducts }}</a>
        {% else %}
            -
        {% endif %}

    {% endspaceless %}

{% endblock %}





